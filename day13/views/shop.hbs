<!DOCTYPE html>
<html lang="en">

<body>
   
    <main>
      {{#if hasProducts}}
        <div class="grid">
            {{#each prods}}
            <article class="card product_item">
                <header class="card_header">
                    <h1 class="product_title"> {{this.title}}</h1>
                </header>
                <div class="card_image">
                    <img src="https://www.bigbasket.com/media/uploads/p/l/30003344_12-fresho-alphonso-mango.jpg">
                </div>
                <div class="card_content">
                    <h2 class="product_price">$11.99</h2>
                    <h2 class="product_price">1kg</h2>
                    <p class="product_description">A very interesting</p>
                </div>
                <div class="card_actions">
                    <button class="bt">ADD TO CART</button>
                </div>
            </article>
            {{/each}}
        </div>
       
    {{else}}
            <h1>shop page found</h1>
    {{/if}}
    </main>
</body>
</html>