extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main 
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card_header
                            h1.product_title #{product.title}
                        div.card_image
                            img(src="https://www.bigbasket.com/media/uploads/p/l/30003344_12-fresho-alphonso-mango.jpg")
                        div.card_content
                            h2.product_price $19.99
                            p.product_description A fresh mango.
                        .card_actions 
                            button.btn Add to Cart