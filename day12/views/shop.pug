extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="css/product.css")

block content 
    main    
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card_header 
                            h1.product_title #{product.title}
                            h1.product_title #{product.name}
                        div.card_image
                            img(src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcR4DIorwpn2UA6i4Mn8TnbKr7ekdAEjH9-yGvJHy40HJasjdHiZ")
                            
                        div.card_content
                            h2.product_price $11.99
                            h2.product_price 1kg 
                            p.product_description fresh vegetables Carrot - Orange
                        .card_actions 
                            button.btn ADD TO CART 